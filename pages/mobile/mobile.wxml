<!--pages/mobile/mobile.wxml-->
<view class="content">

<view class="hr"></view>
<!--输入手机号input-->
<view class="numbg">
  <view>
    <input placeholder="请输入手机号" maxlength="11" bindblur="mobileblur"></input>
  </view>
</view>

<!--文本模块-->
<view>
  <view class="agreement">
    <icon type="success" color="red" size="18"></icon>
    <text class="agree">同意</text>
    <text class="opinion">用户注册协议</text>
  </view>
</view>

<!--下一步按钮-->
<button class="btn" disabled="{{disabled}}" type="{{btnstate}}">下一步</button>

</view>
